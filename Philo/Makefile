NAME = philosophers

CC = gcc
CFLAGS = -Wall -Wextra -Werror -pthread

SRCS = 	philo.c\
		utils.c\
		routine.c\
		monitoring.c\
		parser.c\
		init.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	@echo "üîß Linking objects into executable..."
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "‚úÖ Build complete: ./$(NAME)"

clean:
	@echo "üßº Cleaning object files..."
	rm -f $(OBJS)

fclean: clean
	@echo "üóëÔ∏è Removing executable..."
	rm -f $(NAME)

re: fclean all
